<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lucky Me</title>
    @Styles.Render("~/Content/lib/bootstrap/dist/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/site.css")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-flex justify-content-center">
                <a href="">
                    <img src="~/Content/logo.png" style="width: 192px; height: 81px" />
                </a>
            </div>
        </nav>
    </header>

    <div id="loadAuth">
        @{
            if (Session["UserId"] == null)
            {
                @Html.Partial("_Login")
            }
        }
    </div>

    
    <div class="container body-content">
        @RenderBody()


        
    </div>

    @Scripts.Render("~/Content/lib/jquery/dist/jquery.min.js")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    @Scripts.Render("~/Content/lib/bootstrap/dist/js/bootstrap.bundle.min.js")
    @Scripts.Render("~/Content/js/site.js")
    @RenderSection("scripts", required: false)
</body>
</html>
